<%= turbo_stream.append "products-container" do %>
  <% @products.each do |date, products| %>
    <%= render GroupOfProductsComponent.new(products: products, date: date) %>
  <% end %>
<% end %>

<%= turbo_stream.replace "new_product" do %>
  <%= render NewProductFormComponent.new(product: Product.new) %>
<% end %>